
<% provide(:title, "Log in") %>

<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag("/login", method: "RestClient.post 'https://arcane-forest-85239.herokuapp.com', {username: username, password: password}") do %>
      <%= label_tag(:username, "Username:") %>
      <%= text_field_tag(:username) %>
      <%= label_tag(:password, "Password:") %>
      <%= password_field_tag(:password) %>
      <%= submit_tag("Submit") %>
    <% end %>
  </div>
</div>
