<h1>Player Stats</h1>

<% if logged_in? %>
<table>
  <tr>
    <th>Name</th>
    <th>Rank</th>
    <th>Kill Count</th>
    <th>Games Played</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.avg_rank %></td>
      <td><%= user.kill_count %></td>
      <td><%= user.games_played %></td>
      <td><%= link_to 'Show', user_path(user) %></td>
    </tr>
  <% end %>
</table>
<%= link_to "Refresh", users_path %>
<%= link_to "Back to main page", root_path %>
<% else %>
<p> You must be logged in to view game stats and user profiles. <%= link_to "Log in here.", login_path %></p>
<%= link_to "Back to main page", root_path %>
<% end %>
